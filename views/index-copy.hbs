<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
	document.getElementById('resumeForm').addEventListener('submit', function (e) {
		e.preventDefault();
		const formData = new FormData(this);
		const resumeText = formData.get('resumeText');

		axios.post('/process-resume', { resumeText })
			.then(response => {
				document.getElementById('results').innerHTML = `<p>${response.data.suggestions}</p>`;
			})
			.catch(error => {
				console.error('Error:', error);
				document.getElementById('results').innerHTML = `<p>An error occurred. Please try again.</p>`;
			});
	});
</script>